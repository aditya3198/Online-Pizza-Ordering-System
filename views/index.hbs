<div class="container col-lg-3" id="loginform">

    <h1>Login</h1>
    {{#if error}}
    <div class="danger">{{error}}</div>
    {{/if}}
    <form action="/login" method="POST" class="px-4 py-3">
        <div class="form-group">
            <label for="email">Email address</label>
            <input name="email" type="email" class="form-control" id="email"
                placeholder="email@example.com">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input name="password" type="password" class="form-control" id="pass"
                placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
    </form><br>

    <a href="/register">New around here? Sign up</a><br>
</div>
